
@{
    ViewData["Title"] = "GetStudent";
    Layout = "_ComSciLayout";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&family=Roboto:ital@1&display=swap" rel="stylesheet">
<style>
    .card-img1 {
        border-radius: 50%;
        margin: 3px;
        margin-left: 10%;
        width: 50px;
        height: 50px;
        border: 1px solid #ddd;
    }

    img {
        margin: 20px;
        width: 500px;
    }

    .card-img {
        border-radius: 50%;
        margin: 20px;
        border: 1px solid #ddd;
        padding: 5px;
        width: 150px;
        height: 150px;
    }


    input {
        position: relative;
        width: 700px;
        height: 120px;
        background: #ced6e0;
        border: 3px solid #22a6b3;
        border-radius: 10px;
        margin-bottom: 3px;
        width: 100%;
        padding: 20px;
    }

    button {
        border: 3px solid #22a6b3;
        border-radius: 10px;
    }

    * {
        box-sizing: border-box;
    }

        *
        body {
            font-family: Arial;
            margin: 0;
        }
    /* Column container */
    .row {
        display: flex;
        content: "";
        clear: both;
    }

    /* Sidebar/left column */
    .side {
        flex: 30%;
        background-color: #f1f1f1;
        padding: 20px;
        width: 300px;
    }

    /* Main column */
    .main {
        flex: 70%;
        background-color: white;
        padding: 20px;
    }

    p {
        margin: 0;
    }

    .column1 {
        float: left;
        width: 35%;
        padding-right: 10px;
        height: 100%;
        background-color: #f1f1f1;
        position: fixed;
        border-radius: 30px;
        font-family: 'Kanit', sans-serif;
    }

    .column2 {
        float: left;
        width: 100%;
        padding-left: 40%;
        height: 100%;
        font-family: 'Roboto', sans-serif;
    }
</style>


<div class="row">
    <div class="column1" align='center'>

        <img class="card-img" src="@ViewBag.obj.ImgProfile" alt="Avatar" /><br />
        <p><b>ชื่อ:</b> @ViewBag.obj.Name </p>
        <p><b>รหัสนักศึกษา:</b> @ViewBag.obj.SID </p>
        <p><b>สถานะ:</b> @ViewBag.obj.Status </p>
        <p><b>เบอร์โทรศัพท์:</b> @ViewBag.obj.Phone  </p>
        <p><b>Email:</b> @ViewBag.userEmail  </p>
        <p><b>รายละเอียดเพิ่มเติม:</b> @ViewBag.obj.Detail  </p>

    </div>


    <div class="column2">
        <div class="main">
            
                <div style=" height: auto; background-color: #f1f1f1; border-radius: 30px;">
                    @if (ViewBag.obj.ImgResume != null)
                    {
                    <div style="background-color: #40739e; box-shadow: 5px 10px #273c75;">
                        <p><b style=" margin-left: 10px; font-size: 20px; color: wheat;">Resume</b></p></div>
                        <img src="@ViewBag.obj.ImgResume" alt="Resume" border="0" />
                    }

                </div>
                <div>
                    @if (ViewBag.obj.ImgTranscript != null)
                    {
                <div style="background-color: #40739e; box-shadow: 5px 10px #273c75; ">
                    <p><b style=" margin-left: 10px; font-size: 20px; color: wheat; margin-top: 10px;">Transcript</b></p></div>

                    }
                </div>
            
        </div>
    </div>
</div>