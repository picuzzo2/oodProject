            <p><b>@ViewBag.user.Name</b></p>
            <p><b>ที่อยู่ : </b>@ViewBag.user.Address</p>
            <p><b>โทร : </b>@ViewBag.user.Phone</p>
            <p><b>Email : </b>@ViewBag.userEmail</p>
        </div>

        <div class="column2">
            <div>
                @{ int i = 0;
                   int j = 1000;
                @foreach (StudentNameMatching sm in @ViewBag.StudentNameMatchingList)
                {
                    i++;
                    j++;
                <div class="main">
                    <div class="box" style="text-align:center;">
                        <div class="detail" style="text-align:center;">
                            <img class="card-img1" src="@sm.student.ImgProfile" border="0" />
                            <p style="margin-top:1%; margin-bottom:4%;">ชื่อ: @sm.student.Name</p>
                            @Html.ActionLink("Student Detail", "GetStudent", "Public", new { id = sm.student.SID }, new { @class = "open-button1", target = "_blank" })
                            @if (sm.matching.Result == "Waiting for interview")
                            {

                                string interview = "interview" + j;
                                {
                                    int target = i;
                                    <a href="#@interview" class="btn btn-info" data-toggle="collapse">นัดสัมภาษณ์</a>
                                    <div id="@interview" class="collapse">
                                        <form id="@i" class="form-container">
                                            <label for="interview">วันที่นัดสัมภาษณ์</label>
                                            @Html.EditorFor(model => model.Date, new { type = "date" })<br>
                                            <label for="interview">รายละเอียดในการนัดสัมภาษณ์</label>
                                            @Html.TextAreaFor(model => model.Detail, null)

                                            <button type="button" class="btn cancel" onclick="confirm(@target,@ViewBag.user.CID, @sm.matching.SID, @sm.matching.MID)">ยืนยัน</button>
                                        </form>
                                    </div>
                                }
                            }
                            else if (sm.matching.Result == "Waiting for interview result")
                            {
                                int status = j;
                                <form>

                                    <label>สถานะ : </label>
                                    <select id="@status">
                                        <option class="Wait" value="Wait_Status">Wait</option>
                                        <option class="Pass" value="Pass_Status">Passed</option>
                                        <option class="Failed" value="Failed_Status">Failed</option>
                                    </select>
                                    <button type="button" class="btn btn-dark" onclick="statusSubmit(@status,@ViewBag.user.CID, @sm.matching.SID, @sm.matching.MID)">ยืนยัน</button>
                                </form>

                            }
                            else if (sm.matching.Result == "Company accepted")
                            {
                                <!-- YELLOW -->
                                <div class="btn btn-danger">Waiting for student confirmation</div>
                            }
                            else if (sm.matching.Result == "Company rejected")
                            {
                                <!-- RED -->
                                <div class="btn btn-danger">Rejected</div>
                            }
                            else if (sm.matching.Result == "Student accepted")
                            {
                                <!-- GREEN -->
                                <div class="btn btn-danger">Student accepted</div>
                            }
                            else if (sm.matching.Result == "Student rejected")
                            {
                                <!-- REDD -->
                                <div class="btn btn-danger">Student rejected</div>
                            }
                        </div>
                    </div>
                </div>

                }}
