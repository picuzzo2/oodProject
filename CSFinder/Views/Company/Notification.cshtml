<script>
    function confirm(target, from, to, MID) {
        
        var data = $("#" + target).serialize();
        var intday = $("#" + target).serializeArray()[0].value;
        var detail = $("#" + target).serializeArray()[1].value;
        var today = new Date();
        var todaytime = today.getFullYear() + '-' + ('0' + (today.getMonth() + 1)).slice(-2) + '-' + ('0' + today.getDate()).slice(-2) + "T" + today.getHours() + ":" + today.getMinutes();
        if (!compairTime(intday, todaytime))
        {
            alert("Please enter time that greater than today");
            return false;
        }
        if (detail == "")
        {
            alert("Please enter details");
            return false;
        }
        data = data + "&from=" + from;
        data = data + "&to=" + to;
        data = data + "&MID=" + MID;
        $.ajax({
            type: "POST",
            data: data ,
            url: "/Company/InterviewAppointment",
            success(response) {
                alert(response);
                window.location.href = "/Company/Notification";
            }
        })
    }
    function compairTime(n1, n2) {
        if (parseInt(n1.substr(0, 3)) < parseInt(n2.substr(0, 3)))
            return false;
        else if (parseInt(n1.substr(0, 3)) > parseInt(n2.substr(0, 3)))
            return true;
        if (parseInt(n1.substr(5, 6)) < parseInt(n2.substr(5, 6)))
            return false;
        else if (parseInt(n1.substr(5, 6)) > parseInt(n2.substr(5, 6)))
            return true;
        if (parseInt(n1.substr(8, 9)) < parseInt(n2.substr(8, 9)))
            return false;
        else if (parseInt(n1.substr(8, 9)) > parseInt(n2.substr(8, 9)))
            return true;
        return false;
    }

    function statusSubmit(target, from, to, MID)
    {
        var data = $("#" + target + " :selected").val();
        var message = "";
        if (data.toString() == "Wait_Status") { return false; }
        else {
             message = message + "Detail=" + data + "&from=" + from + "&to=" + to + "&MID=" + MID;
        }
        $.ajax({
            type: "POST",
            data: message,
            url: "/Company/InterviewConfirmation",
            success(response) {
                alert(response);
                window.location.href = "/Company/Notification";
            }
        })
       
