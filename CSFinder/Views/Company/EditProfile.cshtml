@model CSFinder.Models.Company
@{
    ViewData["Title"] = "EditProfile";
    Layout = "_CompanyLayout";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />

<style>

    img {
        margin: 20px;
        width: 500px;
    }

    .card-img {
        border-radius: 50%;
        margin: 20px;
        border: 1px solid #ddd;
        padding: 5px;
        width: 150px;
        height: 150px;
    }

    .profile {
        width: 100%;
    }

    input {
        position: relative;
        width: 100%;
    }

    .detail {
        width: max-content;
        padding: 5%;
        height: auto;
        margin-bottom: 20px;
        margin-left: 70px;
        background-color: #f1f1f1;
        border-radius: 30px;
        box-shadow: 0px 15px 27px -20px rgba(79, 79, 79, 0.45);
        font-family: 'Kanit', sans-serif;
    }

        .detail:hover {
            box-shadow: 24px 30px 29px -20px rgba(79, 79, 79, 1);
        }

    p {
        margin: 0;
    }

    .column1 {
        float: left;
        width: 25%;
        padding-right: 10px;
        height: 50%;
        background-color: #f1f1f1;
        position: fixed;
        border-radius: 30px;
    }

    .column2 {
        float: left;
        width: 100%;
        padding-left: 40%;
        height: 100%;
    }

    .input--style-4 {
        line-height: 24px;
        background: #fafafa;
        -webkit-box-shadow: inset 0px 1px 3px 0px rgba(0, 0, 0, 0.08);
        -moz-box-shadow: inset 0px 1px 3px 0px rgba(0, 0, 0, 0.08);
        box-shadow: inset 0px 1px 3px 0px rgba(0, 0, 0, 0.08);
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        padding: 0 20px;
        font-size: 16px;
        color: #666;
        -webkit-transition: all 0.4s ease;
        -o-transition: all 0.4s ease;
        -moz-transition: all 0.4s ease;
        transition: all 0.4s ease;
    }
</style>



<div class="row">
    <div class="column1" align='center'>
        <img class="card-img" src="@Model.ImgProfile" border="0" /><br />
        <p><b>@Model.Name</b></p>
        <p><b>ที่อยู่ : </b>@Model.Address</p>
        <p><b>โทร : </b>@Model.Phone</p>
        <p><b>Email : </b>@ViewBag.userEmail</p>
    </div>
</div>

<div class="column2">
    <div class="main">
        <div class="detail">
            <h2 class="title">Edit profile Company</h2>
            <form id="myForm">
                <div class="row row-space">
                    <div class="col-8">
                        <div class="input-group">
                            <label class="label">Name</label>
                            @Html.TextBoxFor(model => model.Name, new { @class = "input--style-4", @Value = Model.Name })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="row row-space">

                    <div class="col-6">
                        <div class="input-group">
                            <label class="label">Tel</label>
                            @Html.TextBoxFor(model => model.Phone, new { @class = "input--style-4", @Value = Model.Phone })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })

                        </div>
                    </div>
                </div>
                <div class="row row-space">

                    <div class="col-10">
                        <div class="input-group">
                            <label class="label">Address</label>
                            @Html.TextBoxFor(model => model.Address, new { @class = "input--style-4", @Value = Model.Address })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-3">
                        <div class="input-group">
                            <label class="label">Internship Need</label>
                            @Html.TextBoxFor(model => model.TrainneeNeed, new { @class = "input--style-4", @Value = Model.TrainneeNeed })
                            @Html.ValidationMessageFor(model => model.TrainneeNeed, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-3">
                        <div class="input-group">
                            <label class="label">Cooperative Need</label>
                            @Html.TextBoxFor(model => model.CoopNeed, new { @class = "input--style-4", @Value = Model.CoopNeed })
                            @Html.ValidationMessageFor(model => model.CoopNeed, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-7">
                        <div class="input-group">
                            <label class="label">Details</label>
                            @Html.TextAreaFor(model => model.Detail, new { @class = "input--style-4", @Value = Model.Detail })
                        </div>
                    </div>
                </div><br />
                <div align="left" class="col-md-12">
                    <p><b>Image Profile:</b></p>
                    <div class="file-upload">
                        <input class="file-upload__input" type="file" name="myFile[]" id="myFile" multiple />
                        <script>
                            Array.prototype.forEach.call(document.querySelectorAll('.file-upload__boutton'), function (button) {
                                const hiddenInput = button.parentElement.querySelector('.file-upload__input');
                                const label = button.parentElement.querySelector('.file-upload__label');
                                const defaultLabelText = 'No file(s) selected';

                                label.textContent = defaultLabelText;
                                label.title = defaultLabelText;

                                button.addEventListener("click", function () {
                                    hiddenInput.click();
                                });

                                hiddenInput.addEventListener("change", function () {
                                    console.log(hiddenInput.files);
                                    const filenameList = Array.prototype.map.call(hiddenInput.files, function (file) {
                                        return file.name;
                                    });

                                    label.textContent = filenameList.join(',') || defaultLabelText;
                                    label.title = label.textContent;

                                });
                        </script>
                    </div>
                </div><br />
                <div class="text-center">
                    <div class="form-group">
                        <div class="col-md-12">
                            <a href="#" class="btn btn-primary " style="background-color: #4682B4;" onclick="Save()">Save</a>
                            <a href="Profile" class="btn btn-primary" style="background-color: #CD2E57;">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



<script>
    function Save() {

        var data = $("#myForm").serialize();
        var myFrom = $("#myForm");

        if (!myFrom.valid()) {
            return false;
        }
        debugger
        $.ajax({
            type: "Post",
            url: "/Company/EditProfile",
            data: data,
            success: function (response) {
                if (response.success) {
                    alert(response.responseText);
                    window.location.href = "/Company/Profile";
                }
                else if (!response.success) {
                    alert(response.responseText);
                    window.location.href = "/Company/EditProfile";
                }
                debugger
            }
        })
    }
</script>

