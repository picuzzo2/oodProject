    @model CSFinder.Models.Student
@{
    ViewData["Title"] = "History";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link href="https://fonts.googleapis.com/css2?family=Kanit:wght@300&family=Roboto:ital@1&display=swap" rel="stylesheet">

<style>
    .card-img1 {
        border-radius: 50%;
        margin: 3px;
        margin-left: 10%;
        width: 50px;
        height: 50px;
        border: 1px solid #ddd;
    }

    img {
        margin: 20px;
        width: 500px;
    }

    .card-img {
        border-radius: 50%;
        margin: 20px;
        border: 1px solid #ddd;
        padding: 5px;
        width: 150px;
        height: 150px;
    }


    input {
        position: relative;
        width: 700px;
        height: 120px;
        background: #ced6e0;
        border: 3px solid #22a6b3;
        border-radius: 10px;
        margin-bottom: 3px;
        width: 100%;
        padding: 20px;
    }

    button {
        border: 3px solid #22a6b3;
        border-radius: 10px;
    }

    * {
        box-sizing: border-box;
    }

        *
        body {
            font-family: Arial;
            margin: 0;
        }
    /* Column container */
    .row {
        display: flex;
        content: "";
        clear: both;
    }

    /* Sidebar/left column */
    .side {
        flex: 30%;
        background-color: #f1f1f1;
        padding: 20px;
        width: 300px;
    }

    /* Main column */
    .main {
        flex: 70%;
        background-color: white;
        padding: 20px;
        font-family: 'Kanit', sans-serif;
    }

    p {
        margin: 0;
    }

    .column1 {
        float: left;
        width: 25%;
        padding-right: 10px;
        height: 50%;
        background-color: #f1f1f1;
        position: fixed;
        border-radius: 30px;
        box-shadow: 0px 15px 27px -20px rgba(79, 79, 79, 0.45);
        font-family: 'Kanit', sans-serif;
    }

    .column2 {
        float: left;
        width: 100%;
        padding-left: 35%;
        height: 100%;
    }
</style>

<div class="row">
    <div class="column1" align='center'>

        <img class="card-img" src="@ViewBag.user.ImgProfile" alt="Avatar" align='center' /><br />
        <p><b>ชื่อ</b> @ViewBag.user.Name</p>
        <p><b>สถานะ:</b> @ViewBag.user.Status </p>

    </div>
    <div class="column2">
        <div class="main">
            <div class="text" style="width: 200px;height: 200px;position: absolute;top: 35%;left: 50%; margin-top: -170px; margin-left: -75px;">

                <div class="history">
                    <table width=250% cellpadding="4" cellspacing="1"
                           style=" margin-top: 50px; margin-left: 10%; box-shadow: 11px 13px #95afc0; border-radius: 20px;">
                        <tr>
                            <td style="padding: 20px; background-color: lightgoldenrodyellow; border-radius: 20px;">
                                @{int id=0; 
                                @foreach (CompanyNameMatching i in @ViewBag.CompanyNameMatchingList)
                                {
                                    <div>
                                        <p><b>รอบที่ : @i.matching.MID (@i.matching.Date)</b></p>
                                        <hr>
                                        <p><b>อันดับที่เลือก</b></p>
                                        <p align='center'>
                                            <b>อันดับ 1 : </b><p1 style="color:#333399;">@i.r1Name</p1><br>
                                            <b>อันดับ 2 : </b><p1 style="color:#333399;"> @i.r2Name</p1><br>
                                            <b>อันดับ 3 : </b><p1 style="color:#333399;"> @i.r3Name</p1><br>
                                        </p>
                                        <br>
                                        <div align='right'>
                                            <b>บริษัทที่ได้ :</b> <p1 style="color:#333399;">@i.resultName</p1><br>
                                            @if (i.matching.Result != "Company accepted")
                                            {
                                                @if (i.matching.Result == "Waiting for interview")
                                                {
                                                    <!-- GREY -->
                                                    <b>สถานะ : @i.matching.Result</b>
                                                }
                                                else if (i.matching.Result == "Employed")
                                                {
                                                    <!-- GREY -->
                                                    <b>สถานะ : You can't choose other company</b>
                                                }
                                                else if (i.matching.Result == "Waiting for interview result")
                                                {
                                                    <!-- YELLOW -->
                                                    <b>สถานะ : @i.matching.Result</b>
                                                }
                                                else if (i.matching.Result == "Company rejected"
                                                    || i.matching.Result == "Student rejected")
                                                {
                                                    <!-- RED -->
                                                    <b>สถานะ : @i.matching.Result</b>
                                                }
                                                else if (i.matching.Result == "Student accepted")
                                                {
                                                    <!--GREEN-->
                                                    <b>สถานะ : You've chose this company</b>
                                                }
                                            }
                                            else
                                            {
                                                id++;
                                                <label>ตอบรับ : </label>
                                                <select id="@id">
                                                    <option class="Wait" value="Wait_Status">You passed an interview</option>
                                                    <option class="Accept" value="Accept">Accept</option>
                                                    <option class="Reject" value="Reject">Reject</option>
                                                </select>
                                                <button type="button" class="btn btn-dark"
                                                        onclick="studentAnswer(@id,@i.matching.CID, @ViewBag.user.SID, @i.matching.MID)">
                                                    ยืนยัน
                                                </button>
                                            }
                                        </div>
                                    </div>
                                }}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function studentAnswer(id, company, student, MID) {
        var data = $("#" + id + " :selected").val();
        if (data.toString() == "Wait_Status") {
            return false;
        }
        var message = "Ans=";
        message = message + data + "&CID=" + company + "&SID=" + student + "&MID=" + MID;
        $.ajax({
            type: "POST",
            url: "/Student/Answer",
            data: message,
            success(response) {
                alert(response);
                window.location.href = "/Student/History";
            }
        })
    }
</script>