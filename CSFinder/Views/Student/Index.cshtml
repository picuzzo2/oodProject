@{
    ViewData["Title"] = "Home Page";
}
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />

<style>
    img.profile {
        border-radius: 50%;
        margin: 20px;
        width: 200px;
    }

    .detail {
    }
</style>


<div class="text-left">
    <div class="profile">
        <img class ="profile" src="@ViewBag.user.ImgProfile" alt="Avatar" /><br />
        <p><b>ชื่อ</b> @ViewBag.user.Name</p>
        <p><b>สถานะ:</b> @ViewBag.user.Status </p>
        
    </div>
    <div class="text">
        <div class="post">
            @foreach (PostCompany pc in ViewBag.postCompanyList)
            {
                <table>
                    <tr>
                        <p><img class ="profile" src="@pc.company.ImgProfile" />
                         @pc.company.Name</p>
                    </tr>
                    <tr>
                        <td>@pc.post.Detail</td>
                    </tr>
                    <tr>
                        <td><img src="@pc.post.ImgLink" /></td>
                    </tr>
                </table>
            }
            </div>
    </div>
</div>
